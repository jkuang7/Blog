---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<Base title="Home" description="Personal blog and projects by Jian Kuang">
  <section class="mb-12">
    <h1 class="text-4xl font-bold mb-4">Hi, I'm Jian Kuang</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400">
      Software engineer based in the Bay Area. I build things for the web and write about what I learn.
    </p>
  </section>

  <section>
    <h2 class="text-2xl font-bold mb-6">Recent Posts</h2>
    {posts.length === 0 ? (
      <p class="text-gray-600 dark:text-gray-400">No posts yet.</p>
    ) : (
      <ul class="space-y-8">
        {posts.map((post) => (
          <li>
            <a
              href={`/blog/${post.slug}/`}
              class="group block"
            >
              <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {post.data.title}
              </h3>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                {formatDate(post.data.pubDate)}
                {post.data.description && (
                  <span> &middot; {post.data.description}</span>
                )}
              </p>
            </a>
          </li>
        ))}
      </ul>
      <a
        href="/blog"
        class="inline-block mt-6 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
      >
        View all posts &rarr;
      </a>
    )}
  </section>
</Base>
