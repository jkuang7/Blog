---
import Base from '../layouts/Base.astro';

const timeline = [
  {
    years: '2023-Present',
    role: 'Senior Engineer',
    company: 'Company A',
    description: 'Took ownership of the frontend platform. Shipped a design system that cut dev time in half.',
  },
  {
    years: '2021-2023',
    role: 'Engineer',
    company: 'Company B',
    description: 'Joined a 5-person startup. Wore many hatsâ€”backend, frontend, infra.',
  },
  {
    years: '2019-2021',
    role: 'Junior Engineer',
    company: 'Company C',
    description: 'First real job. Wrote a lot of bad code, then learned to write good code.',
  },
];
---

<Base title="About" description="Learn more about Jian Kuang, software engineer.">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">About</h1>

    <!-- Bio Section -->
    <div class="flex flex-col items-center mb-12">
      <p class="text-lg text-gray-600 dark:text-gray-300 text-center max-w-md">
        Software engineer based in the Bay Area. I build things for the web and write about what I learn.
      </p>
    </div>

    <!-- Divider -->
    <hr class="border-gray-200 dark:border-gray-700 mb-12" />

    <!-- Timeline -->
    <div class="relative">
      <!-- Vertical line -->
      <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200 dark:bg-gray-700"></div>

      <div class="space-y-12">
        {timeline.map((entry, index) => (
          <div
            class="timeline-entry relative pl-12 opacity-0 translate-y-5"
            style={`transition-delay: ${index * 100}ms`}
          >
            <!-- Timeline dot -->
            <div class="absolute left-2.5 w-3 h-3 bg-gray-400 dark:bg-gray-500 rounded-full border-2 border-white dark:border-gray-900"></div>

            <div>
              <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
                {entry.years}
              </span>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mt-1">
                {entry.role} @ {entry.company}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mt-1">
                {entry.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Base>

<style>
  .timeline-entry {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .timeline-entry.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .timeline-entry {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>

<script>
  const entries = document.querySelectorAll('.timeline-entry');

  // Check if reduced motion is preferred
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  if (prefersReducedMotion) {
    // Show all entries immediately
    entries.forEach(entry => entry.classList.add('visible'));
  } else {
    const observer = new IntersectionObserver((items) => {
      items.forEach(item => {
        if (item.isIntersecting) {
          item.target.classList.add('visible');
        }
      });
    }, { threshold: 0.3 });

    entries.forEach(entry => observer.observe(entry));
  }
</script>
