---
import Base from '../../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).filter(post => !post.data.draft);

// Collect all tags with counts
const tagCounts = new Map<string, number>();
posts.forEach(post => {
  post.data.tags?.forEach((tag: string) => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

// Sort tags alphabetically
const sortedTags = Array.from(tagCounts.entries()).sort((a, b) =>
  a[0].localeCompare(b[0])
);
---

<Base title="Tags" description="Browse blog posts by topic.">
  <section>
    <h1 class="text-3xl font-bold mb-8">Tags</h1>
    {sortedTags.length === 0 ? (
      <p class="text-gray-600 dark:text-gray-400">No tags yet.</p>
    ) : (
      <ul class="flex flex-wrap gap-3">
        {sortedTags.map(([tag, count]) => (
          <li>
            <a
              href={`/blog/tags/${tag}/`}
              class="inline-flex items-center gap-2 px-3 py-2 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors"
            >
              <span class="text-gray-900 dark:text-gray-100">{tag}</span>
              <span class="text-sm text-gray-500 dark:text-gray-400">({count})</span>
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</Base>
